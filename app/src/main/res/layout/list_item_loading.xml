<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="@dimen/padding_20">
  <ProgressBar android:id="@+id/progress_bar_loading_item"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"/>
  <TextView android:id="@+id/txt_loading_item"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:textColor="@color/textGrey" android:textSize="@dimen/text_size_16"
      android:text="@string/no_more_to_load" android:layout_gravity="center_horizontal"
      android:visibility="gone"/>
</FrameLayout>